<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Posts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1>All Posts</h1>
        <a href="/posts/new" class="btn btn-primary">Create New Post</a>
        <ul class="list-group">
            <% posts.forEach(post => { %>
                <li class="list-group-item">
                    <h2><%= post.title %></h2>
                    <p><%= post.content %></p>
                    <a href="/posts/<%= post._id %>/edit" class="btn btn-warning">Edit</a>
                    <a href="/posts/<%= post._id %>/delete" class="btn btn-danger">Delete</a>
                </li>
            <% }) %>
        </ul>
    </div>
</body>
</html>
