<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Sign In</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <% console.log('---- MESSAGES ------', alerts.success) %> <% if
    (alerts.success) { %> <% alerts.success.forEach(msg => { %>

    <div class="alert alert-success"><%= msg %></div>
    <% }) %> <% } %> <% if (alerts.error) { %> <% alerts.error.forEach(msg => {
    %>
    <div class="alert alert-danger"><%= msg %></div>
    <% }) %> <% } %>

    <header>
      <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">
            <img
              src="https://getbootstrap.com/docs/5.2/assets/brand/bootstrap-logo.svg"
              alt="Bootstrap"
              width="30"
              height="24"
            />
          </a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNavDropdown"
            aria-controls="navbarNavDropdown"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Features</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Pricing</a>
              </li>
              <li class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle"
                  href="#"
                  role="button"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                  Dropdown link
                </a>
                <ul class="dropdown-menu">
                  <% if(!currentUser) { %>
                  <li>
                    <a class="dropdown-item" href="/auth/signup">Signup</a>
                  </li>
                  <li><a class="dropdown-item" href="/auth/login">Login</a></li>
                  <% } else { %>
                  <li>
                    <a class="dropdown-item" href="/auth/logout">Logout</a>
                  </li>
                  <li><a class="dropdown-item" href="/profile">Profile</a></li>
                  <li>
                    <a class="dropdown-item" href="/images/search">Cats</a>
                  </li>
                  <% } %>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <section class="contact" id="contact">
      <h2 class="heading">Application <span>Form</span></h2>

      <form action="/cats" method="GET">
        <div class="input-box">
          <input type="text" placeholder="Name" name="name" required />
        </div>
        <div class="input-box">
          <input type="email" placeholder="Email" name="email" required />
        </div>
        <div class="input-box">
          <input type="number" placeholder="Phone Number" name="phoneNumber" />
        </div>
        <div class="input-box">
          <input
            type="text"
            placeholder="Search Cat Type"
            name="type"
            required
          />
        </div>

        <div class="input-box">
          <input
            type="text"
            placeholder="Search Cat by Breed"
            name="origin"
            required
          />
        </div>
        <div class="input-box">
          <input
            type="text"
            placeholder="Services you are looking for"
            name="services"
            required
          />
        </div>
        <div class="input-box">
          <select name="services" id="services-box">
            <option value="adopt">Adopt</option>
            <option value="fosterCare">Foster Care</option>
            <option value="volunteer">Volunteer</option>
            <option value="rentMe">Kids Parties</option>
          </select>
        </div>
        <input type="submit" value="Submit" class="btn" />
      </form>
      <div class="image-div">
        <a href='https://postimg.cc/VJ8cn2NH' target='_blank'>
          <img src='https://i.postimg.cc/VJ8cn2NH/the-lucky-neko-2-Jcix-B1-Ky3-I-unsplash.jpg' border='0' alt='the-lucky-neko-2-Jcix-B1-Ky3-I-unsplash'/>
        </a>
      </div>
    </section>
    <!-- scroll reveal -->
    <script src="https://unpkg.com/scrollreveal"></script>
    <!-- typed js -->
    <script src="https://unpkg.com/typed.js@2.1.0/dist/typed.umd.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
