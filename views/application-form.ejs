<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Application Form</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <% console.log('Alerts:', alerts); %> <% if (alerts.success &&
    alerts.success.length > 0) { %> <% alerts.success.forEach(msg => { %>
    <div class="alert alert-success"><%= msg %></div>
    <% }) %> <% } %> <% if (alerts.error && alerts.error.length > 0) { %> <%
    alerts.error.forEach(msg => { %>
    <div class="alert alert-danger"><%= msg %></div>
    <% }) %> <% } %>

    <header>
      <!-- Navbar content -->
    </header>

    <section class="contact" id="contact">
      <h2 class="heading">Application <span>Form</span></h2>

      <form action="/application-form" method="POST">
        <div class="input-box">
          <input type="text" placeholder="Name" name="name" required />
        </div>
        <div class="input-box">
          <input type="email" placeholder="Email" name="email" required />
        </div>
        <div class="input-box">
          <input
            type="tel"
            pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
            placeholder="Phone Number (Format: 123-456-7890)"
            name="phoneNumber"
            required
          />
        </div>
        <div class="input-box">
          <input
            type="text"
            placeholder="Search Cat by Breed"
            name="origin"
            required
          />
        </div>
        <div>
          <label for="service"><p>Service</p></label>
        </div>
        <div class="input-box">
          <select name="services" id="services-box">
            <option value="adopt">Adopt</option>
            <option value="fosterCare">Foster Care</option>
            <option value="volunteer">Volunteer</option>
            <option value="rentMe">Kids Parties</option>
          </select>
        </div>
        <input type="submit" value="Submit" class="btn" />
      </form>
      <div class="image-div">
        <a href="https://postimg.cc/64JnPch1" target="_blank"
          ><img
            src="https://i.postimg.cc/64JnPch1/the-lucky-neko-2-Jcix-B1-Ky3-I-unsplash.jpg"
            border="0"
            alt="the-lucky-neko-2-Jcix-B1-Ky3-I-unsplash"
        /></a>
      </div>
    </section>

    <!-- scroll reveal -->
    <script src="https://unpkg.com/scrollreveal"></script>
    <!-- typed js -->
    <script src="https://unpkg.com/typed.js@2.1.0/dist/typed.umd.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
