<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cat Gallery</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <% if (alerts.success) { %> <% alerts.success.forEach(msg => { %>
    <div class="alert alert-success"><%= msg %></div>
    <% }) %> <% } %> <% if (alerts.error) { %> <% alerts.error.forEach(msg => {
    %>
    <div class="alert alert-danger"><%= msg %></div>
    <% }) %> <% } %>

    <header>
      <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">
            <img
              src="https://getbootstrap.com/docs/5.2/assets/brand/bootstrap-logo.svg"
              alt="Bootstrap"
              width="30"
              height="24"
            />
          </a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNavDropdown"
            aria-controls="navbarNavDropdown"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Features</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Pricing</a>
              </li>
              <li class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle"
                  href="#"
                  role="button"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                  Dropdown link
                </a>
                <ul class="dropdown-menu">
                  <% if(!currentUser) { %>
                  <li>
                    <a class="dropdown-item" href="/auth/signup">Signup</a>
                  </li>
                  <li><a class="dropdown-item" href="/auth/login">Login</a></li>
                  <% } else { %>
                  <li>
                    <a class="dropdown-item" href="/auth/logout">Logout</a>
                  </li>
                  <li><a class="dropdown-item" href="/profile">Profile</a></li>
                  <li>
                    <a class="dropdown-item" href="/images/search">Cats</a>
                  </li>
                  <% } %>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <div class="container">
      <h2 class="text-center my-4">Find Your <span>Cat Friend</span></h2>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% cats.forEach(cat => { %>
        <div class="col">
          <div class="card h-100">
            <img
              src="<%= cat.image %>"
              class="card-img-top"
              alt="<%= cat.name %>"
            />
            <div class="card-body">
              <h5 class="card-title"><%= cat.name %></h5>
              <p class="card-text"><%= cat.description %></p>
              <p class="card-text"><strong>Age:</strong> <%= cat.age %></p>
              <p class="card-text">
                <strong>Origin:</strong> <%= cat.origin %>
              </p>
              <p class="card-text">
                <strong>Affection Level:</strong> <%= cat.affectionLevel %>
              </p>
              <a href="/cats/<%= cat.id %>" class="btn btn-primary"
                >View Details</a
              >
              <a href="/application-form" class="btn btn-success mt-2"
                >Adopt Me</a
              >
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      <div class="container text-center">
        <a href="/search" class="btn btn-primary btn-search">Search Cat</a>
        </div>
    </div>

    <script src="/js/script.js"></script>
    <script src="https://unpkg.com/scrollreveal"></script>
    <script src="https://unpkg.com/typed.js@2.1.0/dist/typed.umd.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
