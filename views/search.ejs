<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Search Cats Page | Meow Matchmaker App</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />
  <link
    href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
    rel="stylesheet"
  />
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <% if (alerts && alerts.error) { %>
    <% alerts.error.forEach(msg => { %>
      <div class="alert alert-danger"><%= msg %></div>
    <% }) %>
  <% } %>
  <% if (alerts && alerts.success) { %>
    <% alerts.success.forEach(msg => { %>
      <div class="alert alert-success"><%= msg %></div>
    <% }) %>
  <% } %>

  <header>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <img
            src="https://picsvg.com/svg/kpAMKg.jpg"
            alt="Bootstrap"
            width="30"
            height="24"
          />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavDropdown"
          aria-controls="navbarNavDropdown"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#about">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="learn-more">Learn More</a>
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Dashboard
              </a>
              <ul class="dropdown-menu">
                <% if(!currentUser) { %>
                <li>
                  <a class="dropdown-item" href="/auth/signup">Signup</a>
                </li>
                <li><a class="dropdown-item" href="/auth/login">Login</a></li>
                <% } else { %>
                <li>
                  <a class="dropdown-item" href="/auth/logout">Logout</a>
                </li>
                <li>
                  <a class="dropdown-item" href="/dashboard">Dashboard</a>
                </li>
                <li><a class="dropdown-item" href="/profile">Profile</a></li>
                <li><a class="dropdown-item" href="/cats">Find a Cat</a></li>
                <li>
                  <a class="dropdown-item" href="/application-form"
                    >Application Form</a
                  >
                </li>
                <li>
                  <a class="dropdown-item" href="/fanclub"
                    >Join Our Fan Club</a
                  >
                </li>
                <li>
                  <a class="dropdown-item" href="/learn-more">Learn More</a>
                </li>
                <li><a class="dropdown-item" href="/posts">Posts</a></li>
                <li>
                  <a class="dropdown-item" href="/contact">Contact Us</a>
                </li>
                <% } %>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <div class="container">
    <h2 class="text-center my-4">Search for Cats</h2>
    <form action="/search/results" method="GET">
      <div class="mb-3">
        <label for="breed" class="form-label">Breed</label>
        <input type="text" class="form-control" id="breed" name="breed">
      </div>
      <div class="mb-3">
        <label for="origin" class="form-label">Origin</label>
        <input type="text" class="form-control" id="origin" name="origin">
      </div>
      <div class="mb-3">
        <label for="color" class="form-label">Color</label>
        <input type="text" class="form-control" id="color" name="color">
      </div>
      <button type="submit" class="btn btn-primary">Search</button>
    </form>
  </div>
  <footer class="footer">
    <div class="footer-text heading">
      <p>
        Copyright &copy;
        <script>
          document.write(new Date().getFullYear());
        </script>
        by Alejandra Valdivia | All Rights Reserved.
      </p>
    </div>
    <div class="footer-iconTop">
      <a href="/"><i class="bx bx-up-arrow-alt"></i></a>
    </div>
  </footer>

  <script src="https://unpkg.com/scrollreveal"></script>
  <script src="https://unpkg.com/typed.js@2.1.0/dist/typed.umd.js"></script>
  <script
    src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
    integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
    crossorigin="anonymous"
  ></script>
  <script src="https://smtpjs.com/v3/smtp.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/js/key.js"></script>
  <script src="/js/app.js"></script>
</body>
</html>
