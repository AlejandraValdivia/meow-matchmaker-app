<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

    <% if (alerts.success) { %>
      <% alerts.success.forEach(msg => { %>
        <div class="alert alert-success"><%= msg %></div>
      <% }) %>
    <% } %>

    <% if (alerts.error) { %>
      <% alerts.error.forEach(msg => { %>
       <div class="alert alert-danger"><%= msg %></div>
      <% }) %>
  <% } %>

  <header>
    <nav class="navbar">
      <ul>
        <li><a href="/">Home</a></li>
        <% if(!currentUser) { %> 
          <li><a href="/auth/signup">Signup</a></li>
          <li><a href="/auth/login">Login</a></li>
        <% } else { %> 
        <li><a href="/auth/logout">Logout</a></li>
        <li><a href="/profile">Profile</a></li>
        <% } %> 
      </ul>
    </nav>
  </header>
    
    <section class="about" id="about">
      <div class="about-img">
        <img src="https://i.imgur.com/RbSdKX5.jpeg" alt="" />
      </div>
      <div class="about-content">
        <h2 class="heading">Welcome to your <span>Profile!</span></h2>
        <h3>Name <span><%= name %>!</h3>
        <h3>Email <span><%= email %>! </h3>
        <h3>Phone <span><%= phone %>! </h3>
          <a href="/edit" class="btn">Edit</a> 
          <a href="/delete" class="btn">Delete</a>
          <a href="/dashboard" class="btn">Go to Dashboard</a> 
          <a href="/auth/logout" class="btn">Logout</a>
      </div>  
    </section>
</body>
</html>